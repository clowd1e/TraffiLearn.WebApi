<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <style>
        .left-panel {
            position: -webkit-sticky; /* For Safari */
            position: sticky;
            top: 0; /* Stick to the top of the viewport */  
            height: 100vh; /* Full height of viewport */
            overflow-y: auto; /* Adds scroll to the left panel if needed */
            padding: 1rem;
        }

        .content-area {
            width: auto;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-dark bg-dark fixed-top d-md-none">
        <div class="container-fluid">
            <button class="navbar-toggler" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasDarkNavbar" aria-controls="offcanvasDarkNavbar">
                <span class="navbar-toggler-icon"></span>
            </button>
        </div>
    </nav>

    <!-- Offcanvas for Small Screens -->
    <div class="offcanvas offcanvas-start text-bg-dark d-md-none" tabindex="-1" id="offcanvasDarkNavbar" aria-labelledby="offcanvasDarkNavbarLabel" data-bs-backdrop="false">
        <div class="offcanvas-header">
            <h2 class="offcanvas-title" id="offcanvasDarkNavbarLabel">TraffiLearn</h2>
            <button type="button" class="btn-close btn-close-white" data-bs-dismiss="offcanvas" aria-label="Close"></button>
        </div>
        <div class="offcanvas-body">
            <ul class="navbar-nav justify-content-end flex-grow-1 pe-3">
                <li class="nav-item">
                    <a class="nav-link active pb-3" aria-current="page" href="/">Головна сторінка</a>
                </li>

                <li class="nav-item">
                    <a class="nav-link active" aria-current="page" href="/questions">Всі запитання</a>
                </li>

                <li class="nav-item">
                    <a class="nav-link active" aria-current="page" href="/topics">Питання по темах</a>
                </li>
            </ul>
        </div>
    </div>

    <div class="d-flex">
        <!-- Left Panel for Larger Screens -->
        <div class="left-panel d-none d-md-block col-md-2 bg-dark text-white">
            <ul class="navbar-nav justify-content-end flex-grow-1 pe-3">
                <li>
                    <h2 class="offcanvas-title mb-3" id="offcanvasDarkNavbarLabel">TraffiLearn</h2>
                </li>

                <li class="nav-item">
                    <a class="nav-link active pb-3" aria-current="page" href="/">Головна сторінка</a>
                </li>

                <li class="nav-item">
                    <a class="nav-link active" aria-current="page" href="/questions">Всі запитання</a>
                </li>

                <li class="nav-item">
                    <a class="nav-link active" aria-current="page" href="/topics">Питання по темах</a>
                </li>

            </ul>
        </div>

        <!-- Main Content Area -->
        <div class="content-area p-3 col-md-9 col-12">
            @RenderBody()
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popperjs/core@2.11.8/dist/umd/popper.min.js" integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js" integrity="sha384-0pUGZvbkm6XF6gxjEnlmuGrJXVbNuzT9qBBavbLwCsOGabYfZo0T0to5eqruptLy" crossorigin="anonymous"></script>
</body>
</html>
